{% extends 'base.html.twig' %}

{% block title %}Passe une commande!{% endblock %}

{% block body %}
    <h1>Passe mes commandes</h1>
    <p> choisisez vos references avant de passer vos commandes sur la boutique française</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {# <b>Choisir mon adresse de livraison</b><br/> #}

            {% set formHtml %}
                {{ form_start(form,{action:path('order1_add')}) }}
                {{ form_label(form.addresses, 'choisissez votre adresse') }}
                <a href="{{ path('add_adress') }}">Ajouter une adresse</a>
                {{ form_end(form) }}

            {% endset %}
            {{ formHtml|replace({'[br]':'<br/>'})|raw}}

            {# <b>Choisir votre transporteur</b><br/> #}

        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>recap de ma commande</b>
                <p>Retrouvez le recap de votre commande</p>
            </div>
            {% for product in cart %}

                <div class="row">
                    <div class="col-2 my-auto">
                        <img src="{{ vich_uploader_asset( product.produit, 'imageFile') }}" alt="{{ product.produit.name }}" height="75px">
                    </div>
                    <div class="col-8 my-auto">
                        {{ product.produit.name}}<br/>
                        <small>{{ product.produit.subtitle}}</small>
                    </div>
                    <div class="col-2 my-auto">
                        × {{ product.quantite}}
                    </div>

                </div>


            {% endfor %}


        </div>

    </div>


{% endblock %}
