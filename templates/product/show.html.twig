        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-7 my-auto">
        <h3>{{ product.name }}</h3>
        <P>{{ product.subtitle }}</P>
         <span class="text-primary"> {{ (product.price/100)|number_format(2,',','') }}â‚¬</span>
