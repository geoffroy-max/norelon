{% extends 'base.html.twig' %}

{% block title %} Nos produits!{% endblock %}

{% block body %}
    <h1>Nos produits</h1>
    <div class="row">
        <div class="col-md-3">
          <h1>filter</h1>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product',{'slug': product.slug}) }}">
                                <img src="{{ vich_uploader_asset(product ,'imageFile') }}" alt="{{ product.name }}" class="img-fluid">
                            </a>
                            <h5>{{product.name}}</h5>
                            <span class="product-subtile">{{ product.subtitle }}</span>
                            <div class="text-primary"> {{ (product.price/100)|number_format(2,',','') }}â‚¬</div>

                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
